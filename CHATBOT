        #chat-container {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            max-width: 600px;
            margin: auto;
            border: 1px solid #ccc;
            border-radius: 8px;
            background-color: #fff;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        #messages {
            flex: 1;
            padding: 15px;
            overflow-y: auto;
            background-color: #e9ecef;
        }

        .message {
            margin-bottom: 10px;
            display: flex;
            flex-direction: column;
        }

        .message .user {
            font-weight: bold;
        }

        .message .text {
            padding: 8px 12px;
            border-radius: 12px;
